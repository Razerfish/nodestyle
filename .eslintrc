{
  "env": {
    "node": true,
    "es6": true
  },

  "parserOptions": {
    "ecmaVersion": 2018
  },

  "rules": {
    "linebreak-style": 0,
    "indent": ["error", 4],
    "comma-dangle": ["error", "never"],
    "quotes": "off",
    "no-trailing-spaces": "off",
    "no-console": "off",
    "no-param-reassign": "warn",
    "consistent-return": "warn",
    "no-else-return": "off",
    "no-unused-vars": "warn",
    "no-plusplus": ["warn", { "allowForLoopAfterthoughts": true }]
  }
}
